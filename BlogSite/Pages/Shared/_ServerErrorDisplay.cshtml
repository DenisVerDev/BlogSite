@{
    var ServerExceptionData = ViewData["ServerExceptionData"] as ServerExceptionData;

    if(ServerExceptionData != null)
    {
        <div class="modal fade" id="serverExceptionModal" tabindex="-1" aria-labelledby="serverExceptionModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="serverExceptionModalLabel">Oops!</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @ServerExceptionData.ClientMessage
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            console.error("@ServerExceptionData.ConsoleMessage");
            $(document).ready(function () {
                $('#serverExceptionModal').modal('show');
            });
        </script>
    }
}
