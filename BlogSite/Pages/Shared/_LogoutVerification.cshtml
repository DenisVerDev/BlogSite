<div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="logoutModalLabel">Are you sure you want to logout?</h5>
      </div>
      <div class="modal-body">
        <p>Click "Logout" below if you are ready to end your current session.</p>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" id="btn-logout-dismiss" data-dismiss="modal">No</button>
        <a class="btn btn-primary" asp-page="/Authentication/Logout">Logout</a>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#btn-logout').click(function () {
            event.preventDefault();
            $('#logoutModal').modal('show');
        });

        $('#btn-logout-dismiss').click(function() {
            $('#logoutModal').modal('hide');
        });
    });
</script>