@using BlogSite.Models.PartialModels
@using Newtonsoft.Json;
@model PartialPagination

<div class="row mt-5 pt-3 justify-content-center">
    <div class="col-sm-12 col-md-4">
        <nav>
            <ul class="pagination pagination-lg justify-content-center">
                <li class="page-item">
                    <button id="pagin-prev" class="page-link">Previous</button>
                </li>
                <li class="page-item">
                    <input id="pagin-curpage" class="page-link" type="number" min="1" max="@Model.TotalPages" value="@Model.CurrentPage" />
                </li>
                <li class="page-item">
                    <div class="page-link text-danger">@Model.TotalPages</div>
                </li>
                <li class="page-item">
                    <button id="pagin-next" class="page-link">Next</button>
                </li>
            </ul>
        </nav>
    </div>
</div>

<script type="text/javascript">
    var pagin_has_prev = @JsonConvert.SerializeObject(Model.HasPrevious);
    var pagin_has_next = @JsonConvert.SerializeObject(Model.HasNext);

    var pagin_min = 1;
    var pagin_max = @JsonConvert.SerializeObject(Model.TotalPages);
    var pagin_cur = @JsonConvert.SerializeObject(Model.CurrentPage);
</script>
