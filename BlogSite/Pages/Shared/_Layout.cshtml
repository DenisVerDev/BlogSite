@{
    ClientService service = new ClientService(TempData);
    User? client = service.GetDeserializedClient();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogSite.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Css",required:false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-danger">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">BlogSite</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/About">About website</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (client != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Post/Create">
                                    <partial name="Icons/_CreateNewPostIcon" />
                                    Create new post
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index">
                                    <partial name="Icons/_FavoritesIcon" />
                                    Favorites
                                </a>
                            </li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" asp-area="">
                                <partial name="Icons/_AccountIcon" />
                                <span id="accountName">
                                    @if (client != null) @client.Username
                                    else {<text>Account</text>}
                                </span>
                            </a>
                            <ul class="dropdown-menu" id="lol">
                                @if (client != null)
                                {
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Profile">Profile</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Profile/MyBlog">My blog</a></li>
                                    <li><a class="dropdown-item" id="btn-logout" asp-area="">Logout</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Authentication/Index">Log in</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Authentication/SignIn">Sign in</a></li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <partial name="_LogoutVerification" />
    <partial name="_ServerErrorDisplay" />

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>