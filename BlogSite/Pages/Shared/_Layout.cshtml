@{
    ClientService service = new ClientService(TempData);
    User? client = service.GetDeserializedClient();

    var server_message = ViewData["ServerMessage"] as ServerMessage;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogSite.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Css",required:false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-danger">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">BlogSite</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/About">About website</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (client != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Post/Create">
                                    <partial name="Icons/_CreateNewPostIcon" />
                                    Create new post
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Author/Favorites">
                                    <partial name="Icons/_FavoritesIcon" />
                                    Favorites
                                </a>
                            </li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <partial name="Icons/_AccountIcon" />
                                <span id="accountName">
                                    @if (client != null) @client.Username
                                    else {<text>Account</text>}
                                </span>
                            </a>
                            <ul class="dropdown-menu" id="lol">
                                @if (client != null)
                                {
                                    <li><a class="dropdown-item" asp-page="/Author/Index" asp-route-id="@client.UserId">My blog</a></li>
                                    <li><a class="dropdown-item" asp-page="/Author/Settings">Settings</a></li>
                                    <li><button class="dropdown-item" id="btn-logout">Logout</button></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-page="/Authentication/Index">Log in</a></li>
                                    <li><a class="dropdown-item" asp-page="/Authentication/SignIn">Sign in</a></li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    @*footer from bootstrap official*@
    <div class="container mt-auto">
        <footer class="d-flex flex-wrap justify-content-between align-items-center px-3 pt-3 mt-4 border-top">
            <div class="col-md-4 d-flex align-items-center">
                <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
                    <partial name="Icons/_BlogSiteIcon" />
                </a>
                <span class="mb-3 mb-md-0 text-muted">© 2023 DenisVerDev, Inc</span>
            </div>
            <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                <li class="ms-3">
                    <a class="text-muted" href="https://github.com/DenisVerDev">
                        <partial name="Icons/_GitIcon" />
                    </a>
                </li>
                <li class="ms-3">
                    <a class="text-muted" href="/">
                        <partial name="Icons/_InstaIcon" />
                    </a>
                </li>
            </ul>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if(client != null)
    {
        <script src="~/js/modals/logout_modal.js"></script>
        <partial name="Components/Modals/_LogoutModal" />
    }

    @if(server_message != null)
    {
        <script src="~/js/modals/server_message_modal.js"></script>
        <partial name="Components/Modals/_ServerMessageModal" model="@server_message"/>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>